{
  "ts-node": {
    "swc": true,
    "require": [ "tsconfig-paths/register" ]
  },
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "noEmit": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "src/*": ["./src/*"],
      "tests/*": ["./tests/*"]
    }
  },
  "exclude" : [
    "node_modules"
  ],
  "include": [
    "src",
    "tests"
  ]
}
